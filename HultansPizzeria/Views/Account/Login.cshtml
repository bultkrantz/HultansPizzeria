@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Logga in";
}

<div class="row">
    <div class="col s12 l6 offset-l3">
        <h2>@ViewData["Title"]</h2>

        <section>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="col s12">
                <div asp-validation-summary="All" class="invalid"></div>

                <div class="row">
                    <div class="input-field col l6 s12">
                        <i class="material-icons prefix">account_circle</i>
                        <input asp-for="Email" type="text" class="validate">
                        <label asp-for="Email">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="input-field col l6 s12">
                        <i class="material-icons prefix">lock</i>
                        <input asp-for="Password" type="password" class="validate">
                        <label asp-for="Password">Lösenord</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col s12">
                        <p>
                            <input asp-for="RememberMe" name="group1" type="checkbox" id="test1" />
                            <label for="test1">@Html.DisplayNameFor(m => m.RememberMe)</label>
                        </p>
                    </div>

                </div>
                    <button class="btn waves-effect waves-light red lighten-1" type="submit">
                        Logga in
                    </button>
                <div class="row">
                    <p>
                        <a asp-action="ForgotPassword">Glömt lösenord?</a>
                    </p>
                    <p>
                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Registrera ny användare?</a>
                    </p>
                </div>
            </form>

        </section>
    </div>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
