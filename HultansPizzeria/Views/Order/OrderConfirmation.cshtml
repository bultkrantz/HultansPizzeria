@model OrderConfirmationViewModel
@inject ICartService CartService

@{
    ViewData["Title"] = "OrderConfirmation";
}
<div class="row">
    <div class="col s12 l4 offset-l4">
        <h2 class="teal-text text-lighten-1 center">Tack för din beställning!</h2>
        @{
            await Html.RenderPartialAsync("_CheckoutCartPartial");
            CartService.ClearCart();
        }
    </div>
</div>
<div class="row">
    <div class="col s12 l4 offset-l4">
        <h5 class="center-align red-text text-lighten-1 text-uppercase">Beställningsinformation</h5>

        <ul class="collection">
            <li class="collection-item">
                <b>Beställningsdatum: </b>@DateTime.Now
            </li>
            <li class="collection-item">
                <b>Adress: </b>@Model.Address
            </li>
            <li class="collection-item">
                <b>Lägenhetsnummer: </b>@Model.ApartmentNumber
            </li>
            <li class="collection-item">
                <b>Våning: </b>@Model.Floor
            </li>
            <li class="collection-item">
                <b>Portkod: </b>@Model.EntryCode
            </li>
            <li class="collection-item">
                <b>Leverans: </b>@Model.DeliveryMethod
            </li>
            <li class="collection-item">
                <b>Betalningsmetod: </b>@Model.PaymentMethod
            </li>
        </ul>
        <a class="btn waves-effect waves-light" asp-controller="Home" asp-action="Index">
            Tillbaka
        </a>
    </div>
</div>

